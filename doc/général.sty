  {%
  \IfStrEq{\firstchar}{-}%
    {\StrSubstitute{#1}{-}{}[\temp]\textsc{\romannumeral \temp}\ier{}~siècle av. J.-C.}%
    {\textsc{\romannumeral #1}\ier{}~siècle}}%
  {%
  \IfStrEq{\firstchar}{-}%
    {\StrSubstitute{#1}{-}{}[\temp]\textsc{\romannumeral \temp}\ieme{}~siècle av. J.-C.}%
    {\textsc{\romannumeral #1}\ieme{}~siècle}}%
}



